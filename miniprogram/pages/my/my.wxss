  margin-top: 60rpx;
  margin-left: 21rpx;
  text-align: center;
}
.myinfo-list view{
  width: 236rpx;
  float: left;
}
.myinfo-list image{
  width: 112rpx;
  height: 112rpx;
  float: left;
  margin-left: 62rpx;
}
.myinfo-list text{
  width: 100%;
  margin-top: 16rpx;
  float: left;
}
