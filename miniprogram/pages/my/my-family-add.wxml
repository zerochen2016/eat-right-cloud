<view style="background-color: white;width:100%;height:432rpx">
  <image style="width:144rpx;height:144rpx;margin-top:80rpx;margin-left:303rpx" src="{{imageFamily}}" />
  <view class="line" style="margin-top: 60rpx;width:100%"></view>
  <view class="mobile-view">
