.article-content{
  width: 100%;
  height: 260rpx;
  background-color: white;
}
.article-content-image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  float: left;
}
.article-content-view{
  height: 200rpx;
  width: 460rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  float: left;
}
.article-content-view text:nth-child(1) {
  width: 100%;
  height: 112rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #424242;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 60rpx;
}
.article-content-view text:nth-child(2) {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content-tab-2{
  width: 100%;
  height: 384rpx;
  background: #FFFFFF;
  margin-top: 24rpx;
}
.content-tab-2-view{
  width: 710rpx;
  height: 128rpx;
  border-bottom: 2rpx solid #DFE6E9;
  float: left;
  margin-left: 40rpx;
}
.content-tab-2-view view{
  width: 600rpx;
  height: 128rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.87);
  line-height: 128rpx;
  text-align: left;
  float: left;
}
.content-tab-2-view image{
  width: 48rpx;
  height: 48rpx;
  float: right;
  margin-top: 40rpx;
  margin-right: 40rpx;
}